// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  F
  M
}

model Pet {
  id      String  @id @default(uuid())
  species String
  breed   String
  age     Int
  gender  Gender
  adopted Boolean @default(false)

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String

  @@map("pets")
}

model Org {
  id      String @id @default(uuid())
  name    String
  cep     String
  address String
  uf      String
  city    String
  phone   String
  email   String @unique
  pets    Pet[]

  @@map("orgs")
}
